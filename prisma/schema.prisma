generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Author {
  id    String @id @default(uuid())
  name  String
  books Book[]
}

model Book {
  id          String @id @default(uuid())
  title       String
  authorId    String
  author      Author @relation(fields: [authorId], references: [id])
  description String
}
